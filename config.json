{
  "description": "File log driver",
  "documentation": "-",
  "entrypoint": ["/docker-rawfile-log-driver/run.sh"],
  "mounts": [
    {
        "destination": "/var/log",
        "type": "bind",
        "source": "/var/log",
        "options": ["rbind","rw"]
    }
],
  "network": {
    "type": "host"
  },
  "interface": {
    "types": [
      "docker.logdriver/1.0"
    ],
    "socket": "log.sock"
  },
	"env": [
		{
			"name": "LOG_LEVEL",
			"description": "Set log level to output for plugin logs",
			"value": "info",
			"settable": ["value"]
		}
	]
}
